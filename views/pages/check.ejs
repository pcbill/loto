<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>
  <% include ../partials/nav.ejs %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>
      查詢
      </h3>

      <form action="/checkSubmit" method="POST">
        號碼 <input id="uid" name="uid" type="text" forcus />
        <button type="submit" value="submit">submit</button>
      </form>
      <br/>

      <% if (results) { %>
      <table class="table table-bordered table-hover">
          <tr>
            <th>號碼</th>  
            <th>姓名</th>  
            <th>報到時間</th>  
            <th>中獎獎項</th>  
            <th>中獎時間</th>  
            <th>領獎時間</th>  
          </tr>
        <% results.forEach( (it) => { %>
          <tr>
            <td><%= it.uid %></td> 
            <td><%= it.name %></td> 
            <td><%= it.registration_time %></td>
            <td><%= it.award_game_id %></td>
            <td><%= it.award_time %></td>
            <td><%= it.getgift_time %></td>
          </tr>
        <% }); %>
      </table>
      <% } %>

    </div>
  </div>
</div>


</body>
</html>
