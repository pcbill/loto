function loadWinnersNotReceived() {
    var loadingEl = document.getElementById('winnersLoading');
    var groupListEl = document.getElementById('winnersGroupList');
    var emptyEl = document.getElementById('winnersNotReceivedEmpty');
    var countEl = document.getElementById('winnersNotReceivedCount');
