    groupListEl.style.display = 'block';
    groupListEl.innerHTML = '';
    emptyEl.style.display = 'none';
    
    fetch('/api/normalGameWinnersNotReceived', {
        credentials: 'include'
    })
        .then(function(response) {
            if (!response.ok) {
                throw new Error('HTTP error ' + response.status);
            }
            return response.json();
        })
        .then(function(data) {
            loadingEl.style.display = 'none';
            
            if (data.success && data.winners && data.winners.length > 0) {
                countEl.textContent = data.winners.length;
                groupListEl.style.display = 'block';
                emptyEl.style.display = 'none';
                btnConfirm.disabled = false;
                btnConfirm.style.opacity = '1';
                
                // æŒ‰çé …åˆ†çµ„
                var groups = {};
                data.winners.forEach(function(winner) {
                    var key = winner.game_gid;
                    if (!groups[key]) {
                        groups[key] = {
                            gid: winner.game_gid,
                            award_list: winner.award_list || winner.game_gid,
                            winners: []
                        };
                    }
                    groups[key].winners.push(winner);
                });
                
                // æ¸²æŸ“åˆ†çµ„
                Object.keys(groups).sort().forEach(function(key, index) {
                    var group = groups[key];
                    var groupId = 'group_' + index;
                    
                    var groupDiv = document.createElement('div');
                    groupDiv.style.cssText = 'margin-bottom: 8px; border: 1px solid #e9ecef; border-radius: 6px; overflow: hidden;';
                    
                    // çé …æ¨™é¡Œåˆ—ï¼ˆå¯å±•é–‹ï¼‰
                    var headerDiv = document.createElement('div');
                    headerDiv.style.cssText = 'display: flex; justify-content: space-between; align-items: center; padding: 10px 12px; background: #f8f9fa; cursor: pointer; user-select: none;';
                    headerDiv.onclick = function() { toggleGroup(groupId); };
