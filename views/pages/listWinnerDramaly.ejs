    var isDrawing = <%= typeof isDrawing !== 'undefined' && isDrawing ? 'true' : 'false' %>;
    var showAnimation = <%= typeof showAnimation !== 'undefined' && showAnimation ? 'true' : 'false' %>;
    var gid = '<%= gid %>';

    function showOne() {
