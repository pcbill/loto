        count++;
        
        // ç•¶æ‰€æœ‰ä¸­çè€…éƒ½é¡¯ç¤ºå®Œç•¢
        if (count >= rowLength) {
            clearInterval(intervalId);
            
            // æ…¶ç¥ç…™ç«
