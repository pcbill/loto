<script>
var gid = '<%= gid %>';
var isDrawing = false;

// é£„è½è£é£¾
document.addEventListener('DOMContentLoaded', function() {
    const items = ['ğŸ§§', 'ğŸ’°', 'ğŸŠ', 'âœ¨', 'ğŸ‰', 'ğŸ’«', 'ğŸ'];
    const container = document.body;
    
    for (let i = 0; i < 20; i++) {
        setTimeout(() => {
            const item = document.createElement('div');
            item.className = 'falling-item';
            item.textContent = items[Math.floor(Math.random() * items.length)];
            item.style.left = Math.random() * 100 + 'vw';
            item.style.animationDuration = (Math.random() * 5 + 5) + 's';
            item.style.animationDelay = (Math.random() * 5) + 's';
            item.style.fontSize = (Math.random() * 20 + 20) + 'px';
            container.appendChild(item);
        }, i * 300);
    }
});

// ç…™ç«æ•ˆæœ
function createFirework(x, y) {
    const colors = ['#FFD700', '#FF0000', '#FFA500', '#FF69B4', '#00FF00'];
    for (let i = 0; i < 12; i++) {
        const firework = document.createElement('div');
        firework.className = 'firework';
        firework.style.left = x + 'px';
        firework.style.top = y + 'px';
        firework.style.background = colors[Math.floor(Math.random() * colors.length)];
        firework.style.boxShadow = '0 0 20px ' + firework.style.background;
        document.body.appendChild(firework);
        
        setTimeout(() => firework.remove(), 1500);
    }
}

// é–‹å§‹æŠ½ç
function startDraw() {
    if (isDrawing) return;
    isDrawing = true;
    
    // éš±è—æŒ‰éˆ•å’Œèªªæ˜ï¼Œé¡¯ç¤ºæŠ½çä¸­
    $('#startButton').addClass('disabled').css('pointer-events', 'none');
    $('#descriptionText').hide();
    $('#drawingProgress').addClass('show');
    
    // å‘¼å« API
    $.post('/api/executeNormal/' + gid, function(data) {
        if (data.success) {
            // éš±è—æŠ½çä¸­æç¤º
            $('#drawingProgress').removeClass('show');
            
            // é¡¯ç¤ºä¸­çè€…åˆ—è¡¨
            $('#winnersSection').addClass('show');
            
            // é€ä¸€é¡¯ç¤ºä¸­çè€…
            showWinnersWithAnimation(data.winners, data.gid);
        } else {
            alert('éŒ¯èª¤ï¼š' + data.error);
            isDrawing = false;
            $('#startButton').removeClass('disabled').css('pointer-events', 'auto');
            $('#descriptionText').show();
            $('#drawingProgress').removeClass('show');
        }
    }).fail(function(err) {
        alert('æŠ½çå¤±æ•—ï¼Œè«‹é‡è©¦');
        isDrawing = false;
        $('#startButton').removeClass('disabled').css('pointer-events', 'auto');
        $('#descriptionText').show();
        $('#drawingProgress').removeClass('show');
    });
}

// é€ä¸€é¡¯ç¤ºä¸­çè€…å‹•ç•«
function showWinnersWithAnimation(winners, gameId) {
    var count = 0;
    var total = winners.length;
    
    function showOne() {
        if (count >= total) {
            // æ‰€æœ‰äººéƒ½é¡¯ç¤ºå®Œç•¢
            clearInterval(intervalId);
            
            // æ…¶ç¥ç…™ç«
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    createFirework(Math.random() * window.innerWidth, Math.random() * window.innerHeight * 0.5);
                }, i * 300);
            }
            
            // å‘¼å« API å®ŒæˆæŠ½ç
            $.post('/completeNormalDrawing/' + gameId, function(res) {
                if (res.success) {
                    $('#drawingStatus').fadeIn();
                    // æ›´æ–°å‰©é¤˜äººæ•¸
                    var newCount = parseInt($('#reminderCount').text()) - total;
                    $('#reminderCount').text(newCount > 0 ? newCount : 0);
                }
            });
            
            return;
        }
        
        var winner = winners[count];
        var row = '<tr style="animation-delay: ' + (count * 0.1) + 's">' +
                  '<td class="rank">'+ (count+1) +'</td>' +
                  '<td class="uid">'+ winner.uid +'</td>' +
                  '<td class="name">'+ winner.name +'</td>' +
                  '<td class="table-num">'+ winner.table_num +'</td>' +
                  '</tr>';
        $('#winnersBody').prepend(row);
        
        // éš¨æ©Ÿç…™ç«
        if (Math.random() > 0.5) {
            createFirework(Math.random() * window.innerWidth, Math.random() * window.innerHeight * 0.5);
        }
        
        count++;
    }
    
    var intervalId = setInterval(showOne, 1500);
}
</script>

